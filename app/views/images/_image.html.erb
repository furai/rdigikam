<h1>
  <%=h @image.album.album_root.specificPath + @image.album.relativePath + '/' + @image.name %>
</h1>

<p>
  <b>Modification Date:</b>
  <%=h @image.modificationDate %>
</p>

<p>
  <b>Filesize:</b>
  <%=h @image.fileSize %>
</p>

<p>
  <b>Unique Hash:</b>
  <%=h @image.uniqueHash %>
</p>

<h2>Metadata</h2>
<%= render :partial => @image.image_metadata %>

<h2>Information</h2>
<%= render :partial => @image.image_information %>

<h2>Comment</h2>
<%= render :partial => @image.image_comment %>

<h2>Property</h2>
<%= render :partial => @image.image_property %>

<h2>Position</h2>
<%= render :partial => @image.image_position %>

<h2>Haar Matrix</h2>
<%= render :partial => @image.image_haar_matrix %>

<h2>Copyright</h2>
<%= render :partial => @image.image_copyright %>

<h2>Thumbnail</h2>
<%= render :partial => @image.unique_hash.thumbnail %>
